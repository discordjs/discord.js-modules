{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"module": "commonjs",
		"target": "es2020",
		"lib": ["esnext", "esnext.array", "esnext.asynciterable", "esnext.intl", "esnext.symbol"],
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"incremental": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"exclude": ["**/*.test.ts"]
}
