{
	"compilerOptions": {
		"strict": true,
		"moduleResolution": "node",
		"target": "ES2020",
		"lib": ["ESNext"],
		"sourceMap": true,
		"removeComments": false,
		"alwaysStrict": true,
		"pretty": true,
		"noEmitHelpers": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"esModuleInterop": true
	},
	"exclude": ["**/*.test.ts"]
}
