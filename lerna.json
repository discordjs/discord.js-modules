{
	"$schema": "http://json.schemastore.org/lerna",
	"version": "independent",
	"command": {
		"publish": {
			"ignoreChanges": ["**/*.md", "**/__tests__/**"],
			"message": "chore(release): publish",
			"conventionalCommits": true,
			"push": false
		},
		"version": {
			"allowBranch": ["main"],
			"conventionalCommits": true,
			"push": false,
			"createRelease": "github"
		}
	},
	"packages": ["packages/*"],
	"npmClient": "yarn",
	"useWorkspaces": true
}
