{
	"$schema": "http://json.schemastore.org/package",
	"name": "discord.js",
	"description": "A powerful library for interacting with the Discord API",
	"contributors": [
		"Amish Shah <amishshah.2k@gmail.com>",
		"Crawl <icrawltogo@gmail.com>",
		"SpaceEEC <spaceeec@yahoo.com>",
		"Vlad Frangu <kingdgrizzle@gmail.com>"
	],
	"license": "Apache-2.0",
	"private": true,
	"scripts": {
		"pretest": "yarn build",
		"test": "jest --collect-coverage",
		"test:ci": "yarn test --verbose --noStackTrace",
		"prebuild": "yarn clean",
		"build": "tsc --build packages/core packages/rest packages/ws --force",
		"clean": "rimraf packages/**/dist",
		"lint": "eslint packages --ext mjs,js,ts",
		"lint:fix": "eslint packages --ext mjs,js,ts --fix",
		"format": "prettier --write **/*.{ts,js,json,yml,yaml}",
		"update": "yarn upgrade-interactive --latest",
		"prepare": "husky install"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/discordjs/discord.js-next.git"
	},
	"bugs": {
		"url": "https://github.com/discordjs/discord.js-next/issues"
	},
	"homepage": "https://github.com/discordjs/discord.js-next",
	"keywords": [
		"discord",
		"api",
		"bot",
		"client",
		"node",
		"discordapp"
	],
	"devDependencies": {
		"@babel/core": "^7.14.6",
		"@babel/plugin-proposal-decorators": "^7.14.5",
		"@babel/preset-env": "^7.14.7",
		"@babel/preset-typescript": "^7.14.5",
		"@commitlint/cli": "^12.1.4",
		"@commitlint/config-angular": "^12.1.4",
		"@types/jest": "^26.0.23",
		"@typescript-eslint/eslint-plugin": "^4.28.0",
		"@typescript-eslint/parser": "^4.28.0",
		"babel-jest": "^27.0.5",
		"babel-plugin-const-enum": "^1.0.1",
		"babel-plugin-transform-typescript-metadata": "^0.3.2",
		"conventional-changelog-cli": "^2.1.1",
		"eslint": "^7.29.0",
		"eslint-config-marine": "^9.0.6",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.23.4",
		"eslint-plugin-prettier": "^3.4.0",
		"husky": "^6.0.0",
		"jest": "^27.0.5",
		"lerna": "^4.0.0",
		"lint-staged": "^11.0.0",
		"nock": "^13.1.0",
		"prettier": "^2.3.2",
		"rimraf": "^3.0.2",
		"typescript": "^4.3.4"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"workspaces": [
		"packages/*"
	]
}
