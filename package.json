{
	"$schema": "http://json.schemastore.org/package",
	"name": "discord.js",
	"version": "13.0.0-dev",
	"description": "A powerful library for interacting with the Discord API",
	"contributors": [
		"Amish Shah <amishshah.2k@gmail.com>",
		"Crawl <icrawltogo@gmail.com>",
		"SpaceEEC <spaceeec@yahoo.com>",
		"Vlad Frangu <kingdgrizzle@gmail.com>"
	],
	"license": "Apache-2.0",
	"private": true,
	"scripts": {
		"test": "jest --collect-coverage",
		"test:ci": "jest --verbose --ci --no-stack-trace --collect-coverage",
		"docs": "typedoc --name discord.js --exclude **/index.ts --exclude **/*.test.ts --includeVersion --json docs/docs.json",
		"prebuild": "npm run clean",
		"build": "lerna run build",
		"clean": "npx rimraf packages/*/dist",
		"lint": "eslint packages --ext .ts",
		"lint:fix": "eslint packages --ext .ts --fix",
		"prettier": "prettier --write **/*.{ts,js,json,yml,yaml}"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/discordjs/discord.js-next.git"
	},
	"bugs": {
		"url": "https://github.com/discordjs/discord.js-next/issues"
	},
	"homepage": "https://github.com/discordjs/discord.js-next",
	"keywords": [
		"discord",
		"api",
		"bot",
		"client",
		"node",
		"discordapp"
	],
	"devDependencies": {
		"@babel/core": "^7.13.14",
		"@babel/plugin-proposal-decorators": "^7.13.5",
		"@babel/preset-env": "^7.13.12",
		"@babel/preset-typescript": "^7.13.0",
		"@commitlint/cli": "^12.0.1",
		"@commitlint/config-angular": "^12.0.1",
		"@types/jest": "^26.0.22",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"babel-jest": "^26.6.3",
		"babel-plugin-const-enum": "^1.0.1",
		"babel-plugin-transform-typescript-metadata": "^0.3.2",
		"eslint": "^7.23.0",
		"eslint-config-marine": "^8.3.2",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-prettier": "^3.3.1",
		"husky": "^4.3.8",
		"jest": "^26.6.3",
		"lerna": "^4.0.0",
		"lint-staged": "^10.5.4",
		"nock": "^13.0.11",
		"prettier": "^2.2.1",
		"typedoc": "^0.20.34",
		"typedoc-plugin-lerna-packages": "^0.3.1",
		"typescript": "^4.2.3"
	},
	"engines": {
		"node": ">=14.0.0"
	},
	"eslintConfig": {
		"extends": "marine/prettier/node",
		"parserOptions": {
			"project": "./tsconfig.eslint.json"
		},
		"ignorePatterns": [
			"**/dist/*"
		],
		"env": {
			"jest": true
		},
		"rules": {
			"@typescript-eslint/naming-convention": 0
		}
	},
	"prettier": {
		"printWidth": 120,
		"useTabs": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"trailingComma": "all",
		"endOfLine": "lf"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && npm test",
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
		}
	},
	"lint-staged": {
		"*.{mjs,js,ts}": [
			"eslint --ext .ts --fix"
		],
		"*.{json,yml,yaml}": [
			"prettier --write"
		]
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-angular"
		],
		"rules": {
			"type-enum": [
				2,
				"always",
				[
					"chore",
					"build",
					"ci",
					"docs",
					"feat",
					"fix",
					"perf",
					"refactor",
					"revert",
					"style",
					"test",
					"types",
					"wip"
				]
			],
			"scope-case": [
				1,
				"always",
				"pascal-case"
			]
		}
	}
}
